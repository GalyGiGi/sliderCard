<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/device_card_width"
        android:layout_height="@dimen/device_card_height"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:minHeight="@dimen/device_card_title_height">

                <TextView
                    android:id="@+id/text_card_title"
                    android:text="米家HIFI跑鞋"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:textSize="@dimen/device_card_title_textsize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_card_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_card_bottom_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="#f4f4f4"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_card_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="进入设备"
                    android:textColor="#666666"
                    android:textSize="@dimen/device_card_bottom_textsize" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/device_card_bottom"
                android:layout_below="@+id/card_title">

            </RelativeLayout>
        </RelativeLayout>
        <!--<View-->
        <!--android:layout_width="@dimen/card_width"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@android:color/white"-->
        <!--android:alpha="0"/>-->

    </android.support.v7.widget.CardView>
</LinearLayout>